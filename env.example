# 应用配置
APP_NAME=闲置物语后端
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api/v1

# 数据库配置
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/xianzhiwuyu
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=xianzhiwuyu
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis配置
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ChromaDB配置
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=item_knowledge

# 蓝心大模型API配置
LANXIN_API_KEY=your_lanxin_api_key_here
LANXIN_API_BASE_URL=https://api.lanxin.ai/v1
LANXIN_VISION_MODEL=lanxin-vision-pro
LANXIN_TEXT_MODEL=lanxin-chat-pro

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# 爬虫配置
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# 第三方平台API配置
XIANYU_API_BASE=https://h5api.m.taobao.com
ZHUANZHUAN_API_BASE=https://app.zhuanzhuan.com
DEWU_API_BASE=https://app.dewu.com 